{
  "extends": ["next/core-web-vitals"],
  "plugins": ["unicorn"],
  "rules": {
    "unicorn/filename-case": [
      "error",
      {
        "case": "kebabCase",
        "ignore": [
          "README.md",
          "^[A-Z_]+\\.md$",
          "next.config.js",
          "tailwind.config.js",
          "postcss.config.js",
          "tsconfig.json",
          "components.json"
        ]
      }
    ]
  }
}
